<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:v="urn:schemas-microsoft-com:vml">
<head>
        <meta name="author" content="Blue Jazz Consulting (www.bluejazzconsulting.com)" />
        <meta http-equiv="content-type" content="text/html;charset=utf-8" />
        <%- if @meta_keywords -%>
        <meta name="keywords" content="<%=@meta_keywords%>"/>
        <%- end -%>
        <%- if @meta_description -%>
        <meta name="description" content="<%=@meta_description%>"/>
        <%- end -%>

        <%=stylesheet_link_tag "print_preview", :media=>"screen, projection, print" %>
        <%=stylesheet_link_tag "print", :media=>"print" %>
        <% if @content_for_page_styles -%>
        <style>
        <%= @content_for_page_styles %>
        </style>
        <% end -%>

        <%=javascript_include_tag "prototype"%>
        <%=javascript_include_tag "scriptaculous"%>
        <%=javascript_include_tag "lowpro"%>
        <%=javascript_include_tag "application"%>
        <%=add_js_requires%>

        <% if @content_for_page_scripts -%>
        <script type="text/javascript">
         // <![CDATA[
         <%= @content_for_page_scripts %>
         // ]]>
        </script>
        <% end -%>

        <% if @content_for_header -%>
        <%= @content_for_header %>
        <% end -%>

        <title>three45 - <%=@page_title || "" %></title>
</head>

<body onload="window.print();">

<div class="container">

  <div id="top_header">

    <div id="top_bar">

    <div class="logo"><%=image_tag "logo-print.png"%></div>

    <%- if @page_header -%>
    <div class="page_title"><%=@page_header%></div>
    <%- end -%>

    <div class="print_buttons">
    <%=link_to_function(image_tag("printer.jpg", :style=>"padding-top:3px;")+" print", "window.print()")%>
    </div>

    </div>

  </div>

  <div class="container2">

    <%=@content_for_layout%>

    <div id="scratch" style="display:none;"></div>

  </div>

  <div class="page_footer"></div>

</div>

</body>

</html>
