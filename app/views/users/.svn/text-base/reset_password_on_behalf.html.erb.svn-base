<%- @page_title = "Change a User's Password" -%>

<br/>

<h3>Change a User's Password</h3>

<p>This form will allow you to change the password of '<%=@user.login%>'.</p>

<% form_for :user, :url => change_password_on_behalf_user_path(@user) do |f| -%>

<fieldset>

<p><label for="password">Password</label><br/>
<%= f.password_field :password %>
<%=error_message_on "user", "password"%>
</p>

<p><label for="password_confirmation">Confirm Password</label><br/>
<%= f.password_field :password_confirmation %>
<%=error_message_on "user", "password_confirmation"%>
</p>

<p><%= submit_tag 'Change Password' %></p>

</fieldset>

<% end -%>

