<div class="bevel"><%=link_to_remote 'Edit', :update => 'referral_provider', :url => select_consultant_referral_url( @target_referral ), :method => :get, :with => "'edit_mode=true'", :html => { :class => 'section_control' } unless edit_disabled -%><strong>Consulting Provider:</strong></div>

<%- if @target_profile -%>
<div class="thumbnail"><%=display_thumbnail_or_default(@target_profile)%></div>

<div class="details">

  <div class="name"><b><%=@target_profile.display_name%></b></div>

  <div class="specialty"><%=tag_list(@target_profile.tags_for_type(:specialties))%> - <%=tag_list(@target_profile.tags_for_type(:sub_specialties))%></div>

  <% @target_workgroup = @target_profile.load_member_workgroup %>

  <div class="address">
  <%- if !@target_workgroup.workgroup_addresses.empty? -%>
          <%- address = @target_workgroup.workgroup_addresses.first.address -%>
          <%=address.street1%> - <%=address.street2%> - <%=address.city%>, <%=address.state%> <%=address.zip_plus_4%>
  <%- else -%>
          (No address on file)
  <%- end -%>
  </div>

</div>
<%- else -%>
<div class="name">Profile not found</div>
<%- end -%>
